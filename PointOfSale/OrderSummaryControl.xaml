<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="400">

    <Grid Name="OrderGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="330"/>
            <ColumnDefinition Width="75"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition MinHeight="750"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column ="0" Grid.RowSpan = "1">
            <TextBox  FontSize="25" Height ="40" Text="{Binding Path=OrderNumber, StringFormat=c}"/>
        </StackPanel>
        <StackPanel Grid.Column ="0" Grid.Row = "2">
            <TextBox FontSize="25"  Height ="40" Text="Subtotal"/>
        </StackPanel>
        <StackPanel Grid.Column ="1" Grid.Row = "1">
            <ListView x:Name ="OrderList"></ListView>
            
        </StackPanel>
        <StackPanel Grid.Column ="1" Grid.Row = "1">
            <ListView x:Name ="PriceList"></ListView>
        </StackPanel>
        <StackPanel Grid.Row = "2" Grid.Column="1">
            <TextBox  Height ="40" Text="{Binding Path=Subtotal, StringFormat=c}"/>
        </StackPanel>

    </Grid>
</UserControl>
