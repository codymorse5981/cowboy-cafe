<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="500">

    <Grid Name="OrderSummaryGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="375"/>
            <ColumnDefinition Width="125"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition MinHeight="750"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column ="0" Grid.Row = "0" Orientation="Horizontal">           
            <TextBlock FontSize="25" Padding="5" Text="Order: "/>
            <TextBlock FontSize="25" Height ="30" Text ="{Binding Path=OrderNumber}"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <Border BorderBrush ="Black" BorderThickness="2"/>
            <ListBox ItemsSource="{Binding Path=Items}" Height="820" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock FontSize="25" Text="{Binding}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Border BorderBrush ="Black" BorderThickness="2"/>
            <ListBox ItemsSource="{Binding Path=Items}" Height="820" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock FontSize="25" Text="{Binding Path=Price, StringFormat=c}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>


        <StackPanel Grid.Column ="0" Grid.Row = "2">
            <Border BorderBrush ="Black" BorderThickness="2"></Border>
            <TextBox FontSize="25"  Height ="40" Text="Subtotal:"/>
        </StackPanel>

        <StackPanel Grid.Row = "2" Grid.Column="1">
            <Border BorderBrush ="Black" BorderThickness="2"></Border>
            <TextBox FontSize="25" Height ="40" Text="{Binding Path=Subtotal, StringFormat=c}"/>
        </StackPanel>
    </Grid>
</UserControl>

    