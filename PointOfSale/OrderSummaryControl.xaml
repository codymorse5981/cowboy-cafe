<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">

    <Grid Name="OrderGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="250"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition MinHeight="400"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="2" BorderBrush="Black" 
            Grid.Column="0" Grid.Row="0" Grid.RowSpan="1"/>

        <Border BorderThickness="2" BorderBrush="Black" 
            Grid.Column="0" Grid.Row="1"/>

        <Border BorderThickness="2" BorderBrush="Black" 
            Grid.Column="0" Grid.Row="3" Grid.RowSpan="1"/>

        <Border BorderThickness="2" BorderBrush="Black" 
            Grid.Column="1" Grid.Row="0" Grid.RowSpan="1"/>

        <Border BorderThickness="2" BorderBrush="Black" 
            Grid.Column="1" Grid.Row="1"/>

        <Border BorderThickness="2" BorderBrush="Black" 
            Grid.Column="1" Grid.Row="3" Grid.RowSpan="1"/>

        <StackPanel Grid.Column ="0" Grid.RowSpan = "1">
            <TextBlock ><Run Text="Order"/></TextBlock>
        </StackPanel>

        <StackPanel Grid.Column= "1">

        </StackPanel>

        <StackPanel Grid.Row = "3" Grid.Column="1">
            <TextBox BorderThickness="2" BorderBrush="Black" Height ="30" Text="{Binding Path=Subtotal, StringFormat=c}"/>
        </StackPanel>

    </Grid>
</UserControl>
