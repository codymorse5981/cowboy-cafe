<UserControl x:Class="PointOfSale.DrinkCustomization.JerkedSodaCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.DrinkCustomization"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="Tan"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                   BorderThickness="4"
                   Padding="4,2"
                   BorderBrush="SandyBrown"
                   CornerRadius="5"
                   Background="{TemplateBinding Background}">
                            <Grid >
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center" >
                                    <ContentPresenter.RenderTransform>
                                        <TranslateTransform X="1.0" Y="1.0" />
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                                <ContentPresenter HorizontalAlignment="Center"
                               VerticalAlignment="Center" Name="content"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <TextBox Grid.ColumnSpan="1" Grid.RowSpan="5"></TextBox>
        <TextBlock Text="Customize Jerked Soda" FontSize="20" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">

            <TextBlock VerticalAlignment="Center" FontSize="25" Padding="20">Size:</TextBlock>

            <RadioButton IsChecked="{Binding Path = Size}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="10" Content="Large" FontSize="25"></RadioButton>

            <RadioButton IsChecked="{Binding Path = Size}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="10" Content="Medium" FontSize="25"></RadioButton>

            <RadioButton IsChecked="{Binding Path = Size}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="10" Content="Small" FontSize="25"></RadioButton>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" FontSize="25" Padding="20">Flavor:</TextBlock>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <RadioButton IsChecked="{Binding Path = Flavor}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="1" Content="BirchBeer" FontSize="25"></RadioButton>

                <RadioButton IsChecked="{Binding Path = Flavor}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="1" Content="CreamSoda" FontSize="25"></RadioButton>

                <RadioButton IsChecked="{Binding Path = Flavor}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="1" Content="OrangeSoda" FontSize="25"></RadioButton>

                <RadioButton IsChecked="{Binding Path = Flavor}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="1" Content="RootBeer" FontSize="25"></RadioButton>

                <RadioButton IsChecked="{Binding Path = Flavor}" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="1" Content="Sarsparilla" FontSize="25"></RadioButton>
            </StackPanel>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center">

            <TextBlock VerticalAlignment="Center" FontSize="25" Padding="20">Options:</TextBlock>
            
            <CheckBox IsChecked="{Binding Path = Decaf}" VerticalAlignment="Center" Margin="10"></CheckBox>
            <Label FontSize ="25" >Decaf</Label>

            <CheckBox IsChecked="{Binding Path = RoomForCream}" VerticalAlignment="Center" Margin="10"></CheckBox>
            <Label FontSize ="25" >Cream</Label>

            <CheckBox IsChecked="{Binding Path = Ice}" VerticalAlignment="Center" Margin="10"></CheckBox>
            <Label FontSize ="25" >Ice</Label>

        </StackPanel>

        <Button Name="BackButton"
                Click="OnBackClick"
                Height=" 100"
                Width="300"
                Grid.Row="5"
                Grid.ColumnSpan="2">
            Done Customizing
        </Button>

        <Border Grid.ColumnSpan="2" Grid.RowSpan="4" BorderBrush="Black" BorderThickness="3"/>
        <Border Grid.ColumnSpan="2" Grid.RowSpan="5" BorderBrush="Black" BorderThickness="3"/>
    </Grid>
</UserControl>
